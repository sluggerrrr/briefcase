{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/backend && pip install uv && uv sync",
    "watchPatterns": [
      "apps/backend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/backend && .venv/bin/uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "region": "us-west1"
  },
  "envVars": {
    "PYTHON_VERSION": "3.12",
    "UV_CACHE_DIR": "/tmp/uv-cache"
  }
}